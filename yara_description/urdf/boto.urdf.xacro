<?xml version="1.0" ?>

<robot name="boto" xmlns:xacro="http://ros.org/wiki/xacro">
    <!--MACROS-->
    <!-- Solid cuboid of length l, width w, height h, and mass m -->
    <!-- l relates to X axis, d to Z axis, and h to Y axis -->
    <xacro:macro name="solid_cuboid_inertia" params="m l w h">
        <inertia  ixx="${(m*(w*w+h*h))/12}" ixy = "0" ixz = "0"
                iyy="${(m*(l*l+h*h))/12}" iyz = "0"
                izz="${(m*(l*l+w*w))/12}"
        />
    </xacro:macro>

